#ifndef DRIVERS_DRV_GPIO_HPP_
#define DRIVERS_DRV_GPIO_HPP_

/* MCU Include */
#include "stm32f3xx.h"

/* Defines */
typedef enum
{
	GPIO_PIN_0,
	GPIO_PIN_1,
	GPIO_PIN_2,
	GPIO_PIN_3,
	GPIO_PIN_4,
	GPIO_PIN_5,
	GPIO_PIN_6,
	GPIO_PIN_7,
	GPIO_PIN_8,
	GPIO_PIN_9,
	GPIO_PIN_10,
	GPIO_PIN_11,
	GPIO_PIN_12,
	GPIO_PIN_13,
	GPIO_PIN_14,
	GPIO_PIN_15
}GPIO_PIN_t;

/* Typedef Structure */
typedef struct
{
	GPIO_PIN_t	Pin;
	uint32_t	Mode;
	uint32_t	Pull;
	uint32_t 	Speed;
	uint32_t	Alternate;

}GPIOInitStructure_t;


/* GPIOx Driver Class */
class HAL_GPIO
{
public:
	void	init(GPIO_TypeDef *GPIOx, GPIOInitStructure_t *GPIOx_cfg);

private:

};


#endif /* DRIVERS_DRV_GPIO_HPP_ */
