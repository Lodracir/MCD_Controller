#ifndef DRIVERS_DRV_RCC_HPP_
#define DRIVERS_DRV_RCC_HPP_

/* MCU Include */
#include "stm32f3xx.h"

/* Macros System Configuration CLK Enable */
#define _RCC_SYSCFG_EN()		( RCC->APB2ENR |= (1 << 0) )

/* Macros GPIO CLK Enable */
#define _RCC_GPIOA_CLK_EN()		( RCC->AHBENR |= (1 << 17) )
#define _RCC_GPIOB_CLK_EN()		( RCC->AHBENR |= (1 << 18) )

#endif /* DRIVERS_DRV_RCC_HPP_ */
