#ifndef DRIVERS_DRV_RCC_HPP_
#define DRIVERS_DRV_RCC_HPP_

/* MCU Include */
#include "stm32f3xx.h"

/* Macros System Configuration CLK Enable */
#define _RCC_SYSCFG_EN()		( RCC->APB2ENR |= (1 << 0) )

/* Macros GPIO CLK Enable */
#define _RCC_GPIOA_CLK_EN()		( RCC->AHBENR |= (1 << 17) )
#define _RCC_GPIOB_CLK_EN()		( RCC->AHBENR |= (1 << 18) )

/* Defines AHB Peripheral Clocks*/
#define _RCC_AHB_GPIOA_CLK		17
#define _RCC_AHB_GPIOB_CLK		18

/* Defines APB2 Peripheral Clocks */
#define _RCC_APB2_SYSCFG_CLK	0

typedef enum
{
	_RCC_PERIPH_CLK_ENABLE,
	_RCC_PERIPH_CLK_DISABLE
}RCC_Periph_Clck_Set_t;


class HAL_RCC
{
public:
void	AHB_SetPeriphClock( uint32_t periph, RCC_Periph_Clck_Set_t set );
void	APB2_SetPeriphClock( uint32_t periph, RCC_Periph_Clck_Set_t set );

private:
};

#endif /* DRIVERS_DRV_RCC_HPP_ */
